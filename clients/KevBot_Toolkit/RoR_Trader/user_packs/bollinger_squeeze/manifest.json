{
  "$schema": "pack_spec_v1",
  "slug": "bollinger_squeeze",
  "name": "Bollinger Squeeze",
  "category": "Momentum",
  "description": "Bollinger Bands with upper/middle/lower zone classification and bandwidth squeeze detection",
  "author": "user",
  "version": "1.0.0",
  "created_at": "2026-02-17T00:00:00Z",
  "pack_type": "tf_confluence",
  "interpreters": [
    "BOLLINGER_SQUEEZE"
  ],
  "trigger_prefix": "bb",
  "parameters_schema": {
    "bb_period": {
      "type": "int",
      "default": 20,
      "min": 5,
      "max": 100,
      "label": "BB Period"
    },
    "bb_mult": {
      "type": "float",
      "default": 2.0,
      "min": 0.5,
      "max": 5.0,
      "label": "StdDev Multiplier"
    },
    "squeeze_pct": {
      "type": "float",
      "default": 4.0,
      "min": 1.0,
      "max": 20.0,
      "label": "Squeeze Threshold (%)"
    }
  },
  "plot_schema": {
    "upper_color": {
      "type": "color",
      "default": "#ef4444",
      "label": "Upper Band Color"
    },
    "basis_color": {
      "type": "color",
      "default": "#a855f7",
      "label": "Basis Color"
    },
    "lower_color": {
      "type": "color",
      "default": "#22c55e",
      "label": "Lower Band Color"
    }
  },
  "outputs": [
    "ABOVE_UPPER",
    "UPPER_ZONE",
    "MID_ZONE",
    "LOWER_ZONE",
    "BELOW_LOWER",
    "SQUEEZE"
  ],
  "output_descriptions": {
    "ABOVE_UPPER": "Price closed above the upper Bollinger Band",
    "UPPER_ZONE": "Price between basis and upper band",
    "MID_ZONE": "Price near the basis (within 25% of band width)",
    "LOWER_ZONE": "Price between lower band and basis",
    "BELOW_LOWER": "Price closed below the lower Bollinger Band",
    "SQUEEZE": "Bandwidth is below squeeze threshold \u2014 low volatility compression"
  },
  "triggers": [
    {
      "base": "cross_upper",
      "name": "Cross Above Upper Band",
      "direction": "SHORT",
      "type": "ENTRY",
      "execution": "bar_close"
    },
    {
      "base": "cross_lower",
      "name": "Cross Below Lower Band",
      "direction": "LONG",
      "type": "ENTRY",
      "execution": "bar_close"
    },
    {
      "base": "cross_above_basis",
      "name": "Cross Above Basis",
      "direction": "LONG",
      "type": "ENTRY",
      "execution": "bar_close"
    },
    {
      "base": "cross_below_basis",
      "name": "Cross Below Basis",
      "direction": "SHORT",
      "type": "ENTRY",
      "execution": "bar_close"
    },
    {
      "base": "squeeze_on",
      "name": "Squeeze Starts",
      "direction": "BOTH",
      "type": "ENTRY",
      "execution": "bar_close"
    },
    {
      "base": "squeeze_off",
      "name": "Squeeze Releases",
      "direction": "BOTH",
      "type": "ENTRY",
      "execution": "bar_close"
    }
  ],
  "indicator_columns": [
    "bb_upper",
    "bb_basis",
    "bb_lower",
    "bb_bandwidth"
  ],
  "indicator_function": "calculate_bollinger_squeeze",
  "interpreter_function": "interpret_bollinger_squeeze",
  "trigger_function": "detect_bollinger_squeeze_triggers",
  "requires_indicators": [
    "bb_upper",
    "bb_basis",
    "bb_lower",
    "bb_bandwidth"
  ]
}